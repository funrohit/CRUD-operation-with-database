@model MyCrud.Models.MyModel

@using (Html.BeginForm("Add", "Home",  FormMethod.Post))
{
    @Html.HiddenFor(m => m.id);
	
    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(b => b.name, new { @class = "form-control", @required = "required" ,@placeholder = "Enter name.."})
    </div>
    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(b => b.email, new { @class = "form-control", @required = "required" , @placeholder = "Enter email.." })
    </div>
    <div class="form-group">
        <label>City</label>
        @Html.TextBoxFor(b => b.city, new { @class = "form-control", @required = "required", @placeholder = "Enter city.." })
    </div>
    <div class="form-group">
        <label>Salary</label>
        @Html.TextBoxFor(b => b.salary, new { @class = "form-control", @required = "required", @placeholder = "Enter salary.." })
    </div>
    <button type="submit" class="btn btn-success">Submit</button>
    <button type="reset" class="btn btn-primary">Reset</button>
}
